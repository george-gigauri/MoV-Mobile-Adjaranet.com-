<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <androidx.cardview.widget.CardView
                android:layout_width="@dimen/_265sdp"
                android:layout_height="@dimen/_265sdp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:id="@+id/card_view_intro"
                app:cardCornerRadius="@dimen/_35sdp"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginTop="@dimen/_38sdp"
                android:layout_marginStart="@dimen/_18sdp"
                android:layout_marginEnd="@dimen/_18sdp"
                app:cardElevation="0dp">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/image_intro"
                    android:scaleType="centerCrop"
                    android:src="@drawable/ic_heart_filled" />

            </androidx.cardview.widget.CardView>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/title_intro"
                app:layout_constraintTop_toBottomOf="@id/card_view_intro"
                android:layout_margin="@dimen/_14sdp"
                android:text="TITLE"
                android:textColor="@android:color/black"
                android:textStyle="bold"
                android:textSize="22sp"
                android:textAlignment="center" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/description_intro"
                app:layout_constraintTop_toBottomOf="@id/title_intro"
                android:layout_margin="@dimen/_14sdp"
                android:text="Simple description of the introsuction slide for user so they can learn how to use this app."
                android:textColor="@android:color/black"
                android:textSize="16sp"
                android:textAlignment="center" />
        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.core.widget.NestedScrollView>