<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.activity.ApplicationSetupActivity"
    android:background="@color/colorPrimary">

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Select Language"
            android:textSize="22sp"
            android:fontFamily="@font/ptsansnarrow_regular"
            android:textColor="@color/colorAccent"
            android:textStyle="bold"
            android:layout_margin="@dimen/_25sdp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="English"
            android:textSize="18sp"
            android:textColor="#fff"
            android:background="@drawable/movie_hover"
            android:focusable="true"
            android:fontFamily="@font/ptsansnarrow_regular"
            android:layout_gravity="center"
            android:padding="@dimen/_12sdp"
            android:layout_margin="@dimen/_5sdp"
            android:id="@+id/select_english" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ქართული"
            android:textSize="18sp"
            android:layout_gravity="center"
            android:padding="@dimen/_11sdp"
            android:textColor="#fff"
            android:background="@drawable/movie_hover"
            android:focusable="true"
            android:fontFamily="@font/enkel"
            android:layout_margin="@dimen/_5sdp"
            android:id="@+id/select_georgian" />

    </androidx.appcompat.widget.LinearLayoutCompat>

</androidx.constraintlayout.widget.ConstraintLayout>